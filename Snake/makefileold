all: Snekao

Snekao: snake1.0.c CobraBib.o MenuBib.o PlayerBib.o NivelBib.o
	@gcc -o SnakeAlpha snake1.0.c CobraBib.o MenuBib.o PlayerBib.o NivelBib.o
	@echo "*********************"	
	@echo " HORA DO SNAKE PORRA"
	@echo "*********************"	

CobraBib.o: CobraBib.c
	@gcc -o CobraBib.o -c \src\CobraBib.c 
	@echo "**************"	
	@echo " 37 COBRA KRL"
	@echo "**************"

MenuBib.o: src\MenuBib.c
	@gcc -o MenuBib.o -c src\MenuBib.c
	@echo "****************************"	
	@echo " TA SAINDO DA JAULA A COBRA"
	@echo "****************************"	

PlayerBib.o: src\PlayerBib.c
	@gcc -o PlayerBib.o -c src\PlayerBib.c
	@echo "****************************"	
	@echo " DERRUBA AS ARVORE TUDO INF"
	@echo "****************************"	

NivelBib.o: src\NivelBib.c
	@gcc -o NivelBib.o -c NivelBib.c
	@echo "***************************"	
	@echo " SAI DO RU COMI PRA CARALHO"
	@echo "***************************"	
	
clean:
	@-rm -f *.o *.c~ *.swp
	@echo "**********************************"	
	@echo " AQUI NOIS CONSTRÓI COBRA CARALHO"
	@echo "**********************************"
